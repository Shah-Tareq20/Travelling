<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background"
    tools:context=".HelperActivity.EditProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:padding="@dimen/_10mdp"
            android:background="@drawable/white_box"
            android:layout_marginStart="@dimen/_20mdp"
            android:layout_marginEnd="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_18mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_12mdp">

                <TextView
                    android:id="@+id/name"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <EditText
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="name"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:alpha="0.5"
                android:background="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:text="Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <TextView
                    android:id="@+id/profileUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:text="username"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:alpha="0.5"
                android:background="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email"
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:gravity="center"
                    android:text="email"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:alpha="0.5"
                android:background="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ph"
                    android:text="Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <TextView
                    android:id="@+id/profilePhone"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="phone"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

                <ImageView
                    android:id="@+id/phone"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:src="@drawable/ic_calendar"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:alpha="0.5"
                android:background="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dob"
                    android:text="Birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <TextView
                    android:id="@+id/profileBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="birthday"
                    android:drawablePadding="@dimen/_10mdp"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

                <ImageView
                    android:id="@+id/calendar"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:src="@drawable/ic_calendar"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:alpha="0.5"
                android:background="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender"
                    android:text="Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <EditText
                    android:id="@+id/profileGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="gender"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:alpha="0.5"
                android:background="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressTitle"
                    android:text="Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <EditText
                    android:id="@+id/profileAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="address"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

                <ImageView
                    android:id="@+id/address"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:src="@drawable/ic_address_book"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:alpha="0.5"
                android:background="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_8mdp"
                android:layout_marginRight="@dimen/_8mdp"
                android:layout_marginBottom="@dimen/_12mdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/password"
                    android:text="Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/lavender"
                    android:textSize="@dimen/_14font_mdp"/>

                <EditText
                    android:id="@+id/profilePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="48dp"
                    android:text="password"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_14font_mdp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/_50mdp"
            android:id="@+id/saveButton"
            android:textAlignment="center"
            android:text="Save"
            android:fontFamily="@font/bungee"
            android:textSize="@dimen/_14font_mdp"
            app:cornerRadius = "@dimen/_20mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/linearLayout"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>